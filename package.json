{
  "name": "commit-harmonizer-action",
  "version": "0.3.0",
  "description": "Commit Harmonizer verifies commit messages and PR titles against the conventional commit format.",
  "private": true,
  "license": "MIT",
  "author": "aisevim <a.aydnlp.pro@gmail.com",
  "volta": {
    "node": "20.9.0"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "conventional-commits",
    "conventional commits",
    "Commit Harmonizer"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "build": "ncc build src/index.js --minify --license licenses.txt",
    "release": "dotenv release-it",
    "release:ci": "release-it --ci",
    "release:ci:test": "release-it --ci --dry-run"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@vercel/ncc": "^0.38.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-symmetrys": "^0.8.1",
    "release-it": "^17.0.0",
    "vitest": "^1.1.0"
  }
}
