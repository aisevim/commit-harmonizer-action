{
  "name": "commit-harmonizer-action",
  "version": "0.2.0",
  "description": "Commit Harmonizer verifies commit messages and PR titles against the conventional commit format.",
  "author": "aisevim <a.aydnlp.pro@gmail.com",
  "private": true,
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js"
  },
  "volta": {
    "node": "20.9.0"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "conventional-commits",
    "conventional commits",
    "Commit Harmonizer"
  ],
  "scripts": {
